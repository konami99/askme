_question
<% cache ['entry', question] do %>
    <article class="question question-type-normal">
      <h2>
        <%= link_to question.title, question %>
      </h2>
      <div class="question-author">
        <a href="#" original-title="<%= question.user.username %>" class="question-author-img tooltip-n"><span></span><img alt="" src="http://placehold.it/60x60/FFF/444"></a>
      </div>
      <div class="question-inner">
        <div class="clearfix"></div>
        <p class="question-desc"><%= question.content %></p>
        <div class="question-details">
          <% if question.question_status_id.eql? 1 %>
              <span class="question-answered question-answered"><i class="icon-ok"></i><%= question.question_status.name %></span>
          <% else %>
              <span class="question-answered question-answered-done"><i class="icon-ok"></i><%= question.question_status.name %></span>
          <% end %>
          <span class="question-favorite"><i class="icon-star"></i>5</span>
        </div>
        <span class="question-date"><i class="icon-time"></i><%= question.created_at.strftime("%d/%m/%Y") %></span>
        <span class="question-comment"><a href="#"><i class="icon-comment"></i><%= pluralize(question.answers.size(), 'Answer') %></a></span>
        <div class="clearfix"></div>
      </div>
    </article>
<% end %>