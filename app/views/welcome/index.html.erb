
      <% if flash[:notice] %>
          <div class="alert-message success">
            <i class="icon-flag"></i>
            <p><span></span><br>
              <%= flash[:notice] %></p>
          </div>
      <% end %>
      <% if flash[:alert] %>
      <div class="alert-message error">
        <i class="icon-flag"></i>
        <p><span></span><br>
          <%= flash[:alert] %></p>
      </div>
      <% end %>
      <div class="tabs-warp question-tab">
        <ul class="tabs">
          <li class="tab"><a href="#" class="current">Recent Questions</a></li>
          <li class="tab"><a href="#">Most Responses</a></li>
          <li class="tab"><a href="#">Recently Answered</a></li>
          <li class="tab"><a href="#">No answers</a></li>
        </ul>
        <div class="tab-inner-warp">
          <div class="tab-inner">
            <% cache ['store', Question.latest] do %>
                <%= render(partial: 'recent_question', collection: @recent_questions) %>
            <% end %>
            <a href="#" class="load-questions"><i class="icon-refresh"></i>Load More Questions</a>
          </div>
        </div>
        <div class="tab-inner-warp">
          <div class="tab-inner">
            <%= render(partial: 'recent_question', collection: @most_responses) %>
            <a href="#" class="load-questions"><i class="icon-refresh"></i>Load More Questions</a>
          </div>
        </div>
        <div class="tab-inner-warp">
          <div class="tab-inner">
            <%= render(partial: 'recent_question', collection: @recently_answered) %>
            <a href="#" class="load-questions"><i class="icon-refresh"></i>Load More Questions</a>
          </div>
        </div>
        <div class="tab-inner-warp">
          <div class="tab-inner">
            <%= render(partial: 'recent_question', collection: @no_answers) %>
            <a href="#" class="load-questions"><i class="icon-refresh"></i>Load More Questions</a>
          </div>
        </div>
      </div><!-- End page-content -->

